{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "mobile": {
      "type": "string",
      "required": false
    },
    "fullName": {
      "type": "string",
      "required": false
    },
    "emailVerificationCode": {
      "type": "string"
    },
    "currentPlan": {
      "type": "string",
      "defualt": "spectator"
    }
  },
  "validations": [],
  "relations": {
    "identities": {
      "type": "hasMany",
      "model": "userIdentity",
      "foreignKey": "userId"
    },
    "credentials": {
      "type": "hasMany",
      "model": "userCredential",
      "foreignKey": "userId"
    },
    "userdetails": {
      "type": "hasOne",
      "model": "userdetails",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "useraddress": {
      "type": "hasOne",
      "model": "useraddress",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "kartas": {
      "type": "hasMany",
      "model": "karta",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "verifyEmail": {
      "accepts": [
        {
          "arg": "otp",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "data",
        "type": "user",
        "root": true
      },
      "http": {
        "verb": "get",
        "path": "/verify_email"
      }
    },
    "selectPlan": {
      "accepts": [
        {
          "arg": "plan",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "data",
        "type": "user",
        "root": true
      },
      "http": {
        "verb": "post",
        "path": "/assign_plan"
      }
    },
    "resendCode": {
      "returns": {
        "arg": "status",
        "type": "string"
      },
      "http": {
        "verb": "post",
        "path": "/resend_code"
      }
    }
  }
}
