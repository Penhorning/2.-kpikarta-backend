{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "mobile": {
      "type": "string",
      "required": false
    },
    "fullName": {
      "type": "string",
      "required": false
    },
    "emailVerificationCode": {
      "type": "string"
    },
    "mobileVerified": {
      "type": "boolean"
    },
    "mobileVerificationCode": {
      "type": "string"
    },
    "currentPlan": {
      "type": "string",
      "defualt": "spectator"
    },
    "mfaEnabled":{
      "type":"boolean",
      "defualt":false
    },
    "mfaSecret":{
      "type":"string",
      "defualt":""
    },
    "mfaQRCode":{
      "type":"string",
      "defualt":""
    }
  },
  "validations": [],
  "relations": {
    "identities": {
      "type": "hasMany",
      "model": "userIdentity",
      "foreignKey": "userId"
    },
    "credentials": {
      "type": "hasMany",
      "model": "userCredential",
      "foreignKey": "userId"
    },
    "userdetails": {
      "type": "hasOne",
      "model": "userdetails",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "useraddress": {
      "type": "hasOne",
      "model": "useraddress",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    },
    "kartas": {
      "type": "hasMany",
      "model": "karta",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "verifyEmail": {
      "accepts": [
        {
          "arg": "otp",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "data",
        "type": "user",
        "root": true
      },
      "http": {
        "verb": "get",
        "path": "/verify_email"
      }
    },
    "selectPlan": {
      "accepts": [
        {
          "arg": "plan",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "data",
        "type": "user",
        "root": true
      },
      "http": {
        "verb": "post",
        "path": "/assign_plan"
      }
    },
    "resendCode": {
      "returns": {
        "arg": "status",
        "type": "string"
      },
      "http": {
        "verb": "post",
        "path": "/resend_code"
      }
    },
    "generateMFAQRCode": {
      "accepts": [
      ],
      "returns": {
        "arg": "qrcode",
        "type": "string"
      },
      "http": {
        "verb": "put",
        "path": "/generateMFAQRCode"
      }
    },
    "verifyMFACode": {
      "accepts": [
        {
          "arg": "otp",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "verified",
        "type": "boolean"
      },
      "http": {
        "verb": "put",
        "path": "/verifyMFAToken"
      }
    },
    "enableMFA": {
      "accepts": [
        {
          "arg": "otp",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "enabled",
        "type": "boolean"
      },
      "http": {
        "verb": "put",
        "path": "/enableMFA"
      }
    },
    "resetMFAConfig": {
      "accepts": [
      ],
      "returns": {
        "arg": "reset",
        "type": "boolean"
      },
      "http": {
        "verb": "put",
        "path": "/resetMFA"
      }
    }
  }
}
