{
  "name": "karta_version",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "mongodb": {
      "collection": "karta_version",
      "allowExtendedOperators": true
    }
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "kartaId": {
      "type": "string",
      "required": true
    },
    "is_deleted": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {},
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "createVersion": {
      "accepts": [
        {
          "arg": "name",
          "type": "string",
          "required": true
        },
        {
          "arg": "kartaId",
          "type": "string",
          "required": true
        },
        {
          "arg": "versionId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "data",
        "type": "object"
      },
      "http": {
        "path": "/create-version",
        "verb": "post"
      }
    }
  }
}
