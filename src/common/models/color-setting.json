{
  "name": "color_setting",
  "base": "PersistedModel",
  "idInjection": true,
  "strict": "filter",
  "options": {
    "validateUpsert": true,
    "mongodb": {
      "collection": "color_setting",
      "allowExtendedOperators": true
    }
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "settings": {
      "type": [
        {
          "min": "number",
          "max": "number",
          "color": "string"
        }
      ],
      "is_global": {
        "type": "boolean"
      },
      "is_deleted": {
        "type": "boolean"
      },
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    },
    "karta": {
      "type": "belongsTo",
      "model": "karta",
      "foreignKey": "kartaId",
      "options": {
        "disableInclude": true
      }
    }
  },
  
  "methods": {
    "getGloabl": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "color_settings",
        "type": "color_setting"
      },
      "http": {
        "path": "/global",
        "verb": "post"
      }
    },
    "getByUser": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": false
        },
        {
          "arg": "kartaId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "color_settings",
        "type": "color_setting"
      },
      "http": {
        "path": "/by-user",
        "verb": "post"
      }
    },
    "toggleGlobal": {
      "accepts": [
        {
          "arg": "colorId",
          "type": "string",
          "required": true
        },
        {
          "arg": "userId",
          "type": "string",
          "required": true
        },
        {
          "arg": "is_global",
          "type": "boolean",
          "required": true
        }
      ],
      "returns": {
        "arg": "message",
        "type": "string"
      },
      "http": {
        "path": "/toggle-global",
        "verb": "post"
      }
    }
  }
}
