{
  "name": "notification",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "contentId": {
      "type": "string",
      "required": true
    },
    "click_type": {
      "type": "string",
      "required": false
    },
    "is_read": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "getNotifications": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true
        },
        {
          "arg": "page",
          "type": "number",
          "required": false
        },
        {
          "arg": "limit",
          "type": "number",
          "required": false
        }
      ],
      "returns": {
        "arg": "notifications",
        "type": "notification"
      },
      "http": {
        "path": "/get-notifications",
        "verb": "post"
      }
    },
    "updateNotificationStatus": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "notifications",
        "type": "string"
      },
      "http": {
        "path": "/update-notifications-status",
        "verb": "post"
      }
    }
  }
}
