{
  "name": "karta_node",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "due_date": {
      "type": "date"
    },
    "version": {
      "type": "number"
    },
    "notification_type": {
      "type": "string"
    },
    "font_style": {
      "type": "string"
    },
    "alignment": {
      "type": "string"
    },
    "text_color": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "start_date": {
      "type": "string"
    },
    "days_to_calculate": {
      "type": "string"
    },
    "fiscal_year_start_date": {
      "type": "date"
    },
    "fiscal_year_end_date": {
      "type": "date"
    },
    "weightage": {
      "type": "number"
    },
    "target": {
      "type": [
        {
          "frequecy": "string",
          "value": "number"
        }
      ]
    },
    "achieved_value": {
      "type": "number"
    },
    "kpi_calc_period": {
      "type": "string"
    },
    "contributors": {
      "type": [
        {
          "userId": "string"
        }
      ]
    }
  },
  "validations": [],
  "relations": {
    "karta_detail": {
      "type": "belongsTo",
      "model": "karta",
      "foreignKey": "kartaDetailId",
      "options": {
        "nestRemoting": true
      }
    },
    "karta": {
      "type": "belongsTo",
      "model": "karta",
      "foreignKey": "kartaId",
      "options": {
        "nestRemoting": true
      }
    },
    "karta_phase": {
      "type": "hasOne",
      "model": "karta_phase",
      "foreignKey": "phaseId",
      "options": {
        "nestRemoting": true
      }
    },
    "children": {
      "type": "hasMany",
      "model": "karta_node",
      "foreignKey": "parentId",
      "options": {
        "nestRemoting": true
      }
    },
    "parent": {
      "type": "belongsTo",
      "model": "karta_node",
      "foreignKey": "parentId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "kpiNodes": {
      "accepts": [
        {
          "arg": "page",
          "type": "number",
          "required": false
        },
        {
          "arg": "limit",
          "type": "number",
          "required": false
        },
        {
          "arg": "searchQuery",
          "type": "string",
          "required": false
        },
        {
          "arg": "userId",
          "type": "string",
          "required": true
        },
        {
          "arg": "percentage",
          "type": "number",
          "required": false
        },
        {
          "arg": "startUpdatedDate",
          "type": "string",
          "required": false
        },
        {
          "arg": "endUpdatedDate",
          "type": "string",
          "required": false
        }
      ],
      "returns": {
        "arg": "karta_nodes",
        "type": "karta_node"
      },
      "http": {
        "path": "/kpis",
        "verb": "post"
      }
    }
  }
}
