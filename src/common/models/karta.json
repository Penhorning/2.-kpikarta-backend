{
  "name": "karta",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "mongodb": {
      "collection": "karta",
      "allowExtendedOperators": true
    }
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "status": {
      "type": "boolean",
      "default": true
    },
    "isDeleted": {
      "type": "boolean",
      "default": false
    },
    "sharedTo": {
      "type": [
        {
          "email": "string"
        }
      ]
    }
  },
  "validations": [],
  "relations": {
    "owner": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId",
      "options": {
        "nestRemoting": true
      }
    },
    "node": {
      "type": "hasOne",
      "model": "karta_node",
      "foreignKey": "",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "share": {
      "accepts": [
        {
          "arg": "karta",
          "type": "object",
          "required": true
        },
        {
          "arg": "emails",
          "type": "array",
          "required": true
        }
      ],
      "returns": {
        "arg": "message",
        "type": "string"
      },
      "http": {
        "path": "/share",
        "verb": "post"
      }
    },
    "sharedKartas": {
      "accepts": [
        {
          "arg": "email",
          "type": "string",
          "required": true
        },
        {
          "arg": "page",
          "type": "number",
          "required": false
        },
        {
          "arg": "limit",
          "type": "number",
          "required": false
        }
      ],
      "returns": {
        "arg": "kartas",
        "type": "karta"
      },
      "http": {
        "path": "/sharedKartas",
        "verb": "post"
      }
    },
    "softDelete": {
      "accepts": [
        {
          "arg": "kartaId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "kartas",
        "type": "karta"
      },
      "http": {
        "path": "/delete-karta",
        "verb": "post"
      }
    }
  }
}
