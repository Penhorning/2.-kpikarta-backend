{
  "name": "subscription",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "mongodb": {
      "collection": "subscription",
      "allowExtendedOperators": true
    }
  },
  "mixins": {
    "TimeStamp": {
      "required": true,
      "validateUpsert": true,
      "silenceWarnings": true
    }
  },
  "properties": {
    "customerId": {
      "type": "string",
      "required": true
    },
    "planId": {
      "type": "string",
      "required": true
    },
    "subscriptionId": {
      "type": "string",
      "required": true
    },
    "trialStart": {
      "type": "date"
    },
    "trialEnd": {
      "type": "date"
    },
    "amount": {
      "type": "number"
    },
    "status": {
      "type": "string",
      "required": true
    },
    "frequency": {
      "type": "string",
      "required": true
    },
    "nextSubscriptionDate": {
      "type": "date",
      "required": true
    },
    "subscriptionDetails": {
      "type": "object",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user",
      "foreignKey": "userId",
      "options": {
        "nestRemoting": true
      }
    },
    "company": {
      "type": "belongsTo",
      "model": "company",
      "foreignKey": "companyId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [],
  "methods": {
    "getPlans": {
      "accepts": [],
      "returns": {
        "arg": "plans",
        "type": "array"
      },
      "http": {
        "path": "/get-plans",
        "verb": "get"
      }
    },
    "assignPlan": {
      "accepts": [
        {
          "arg": "planId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "message",
        "type": "string"
      },
      "http": {
        "path": "/assign-plan",
        "verb": "post"
      }
    },
    "getSubscribedUsers": {
      "accepts": [],
      "returns": {
        "arg": "users",
        "type": "object"
      },
      "http": {
        "path": "/get-subscribed-users",
        "verb": "post"
      }
    },
    "cancel": {
      "accepts": [
        {
          "arg": "userId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "users",
        "type": "object"
      },
      "http": {
        "path": "/cancel",
        "verb": "post"
      }
    },
    "getUserCount": {
      "accepts": [],
      "returns": {
        "arg": "count",
        "type": "object"
      },
      "http": {
        "path": "/get-user-count",
        "verb": "get"
      }
    },
    "getTransactions": {
      "accepts": [
        {
          "arg": "limit",
          "type": "number",
          "required": true
        },
        {
          "arg": "offset",
          "type": "string"
        }
      ],
      "returns": {
        "arg": "transactions",
        "type": "array"
      },
      "http": {
        "path": "/get-transactions",
        "verb": "get"
      }
    },
    "getPortal": {
      "accepts": [
        {
          "arg": "res",
          "type": "object",
          "http": { "source": "res" }
       }
      ],
      "returns": {
        "arg": "result",
        "type": "any"
      },
      "http": {
        "path": "/get-portal",
        "verb": "get"
      }
    }
  }
}
